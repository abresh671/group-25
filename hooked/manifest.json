{
  "manifest_version": 3,
  "name": "hooked",
  "version": "1.0.0",
  "description": "Lightweight phishing detection with on-page heuristics and one-click domain filtering.",
  "action": {
    "default_title": "hooked",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon-200.svg",
    "48": "assets/icon-200.svg",
    "128": "assets/icon-200.svg"
  },
  "permissions": [
    "declarativeNetRequest",
    "scripting",
    "storage",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html"
}
